@page
    @using CoffeeClasses.Operations;
    @model IndexModel
        @{
            ViewData["Title"] = "Home page";
        }

        <div class="card" style=" margin-top: 20px">
            <div class="card-header">

                <h3>How to make Barista Coffee</h3>

            </div>
            <div class="card-body">
                <h3>Body</h3>

                <form method="post">
                    <div class="form-group">
                        <div class="row">
                            <p class="card-text">Add stuff here</p>
                        </div>

                        <div class="row">


                            <label asp-for="CoffeeSelector" class="col-lg-2"></label>
                            <select asp-for="SelectedCoffee" class="col-lg-2" asp-items="Html.GetEnumSelectList<EnumCoffeeType>()">
                            </select>




                            <input type="submit" value="Submit" asp-action="Index" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <h3>Footer</h3>

                <div class="row">
                    <p class="card-text">Add stuff here</p>
                </div>
            </div>
        </div>
